LOCAL_PATH := $(call my-dir)

include $(CLEAR_VARS)

LOCAL_MODULE := libfalltergeist

SDL_PATH := ../SDL

LOCAL_C_INCLUDES := $(LOCAL_PATH)
LOCAL_C_INCLUDES += $(LOCAL_PATH)/$(SDL_PATH)/include
LOCAL_CPP_INCLUDES += $(LOCAL_PATH)/$(SDL_PATH)/include


LOCAL_CFLAGS := --std=c++11 -funwind-tables
LOCAL_CPPFLAGS := --std=c++11 -funwind-tables

SDL_MIX_PATH := ../SDL_mixer

LOCAL_C_INCLUDES += $(LOCAL_PATH)/$(SDL_MIX_PATH)/include
LOCAL_CPP_INCLUDES += $(LOCAL_PATH)/$(SDL_MIX_PATH)/include

SDL_IMG_PATH := ../SDL_image

LOCAL_C_INCLUDES += $(LOCAL_PATH)/$(SDL_IMG_PATH)/include
LOCAL_CPP_INCLUDES += $(LOCAL_PATH)/$(SDL_IMG_PATH)/include

LOCAL_SRC_FILES := @ANDROID_SOURCES_LIB@
LOCAL_SRC_FILES += libfalltergeist.h

LIBFALL_PATH := @CMAKE_SOURCE_DIR@/lib/libfalltergeist/src
LOCAL_C_INCLUDES += $(LIBFALL_PATH)

LOCAL_LDLIBS := -lz
LOCAL_STATIC_LIBRARIES :=
LOCAL_SHARED_LIBRARIES := SDL2 SDL2_mixer SDL2_image

LOCAL_EXPORT_C_INCLUDES += $(LOCAL_C_INCLUDES)

include $(BUILD_SHARED_LIBRARY)
